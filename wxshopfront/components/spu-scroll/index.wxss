.container{
    padding: 42rpx 0 34rpx 28rpx;
}

.title{
    width: 694rpx;
    height: 90rpx;
}

.price-unit{
    font-size: 24rpx !important;
    color: #157658 !important;
}
/*important提高CSS的权重*/
.price-value{
    font-size: 32rpx !important;
    color: #157658 !important;
}

.inner{
    display: flex;
    flex-direction: row;
}

.spu-img{
    width: 160rpx;
    height: 160rpx;
}

.spu-container{
    margin-right: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.scroll-view{
    margin-top: 28rpx;
    display: flex;
    flex-direction: row;
}

